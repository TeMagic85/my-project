{
   "tabWidth": 3,
   "endOfLine": "lf",
   "printWidth": 80,
   "semi": true,
   "singleQuote": true,
   "useTabs": false,
   "quoteProps": "as-needed",
   "bracketSpacing": true,
   "arrowParens": "avoid",
   "requirePragma": false,
   "insertPragma": false,
   "trailingComma": "all",
   "htmlWhitespaceSensitivity": "css",
   "proseWrap": "preserve",
   "jsxSingleQuote": false,
   "jsxBracketSameLine": false,
   "vueIndentScriptAndStyle": false,
   "overrides": [
      {
         "files": ["*.html", "*.css", "*.scss"],
         "options": {
            "tabWidth": 2
         }
      }
   ]
}